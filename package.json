{
  "name": "contactsapp-cap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "private": true,
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "start:prod": "cds-serve --profile production",
    "build": "cds build --production"
  },
  "dependencies": {
    "@cap-js/postgres": "^2.0.6",
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9.4.2"
  },
  "cds": {
    "requires": {
      "db": { "kind": "sqlite", 
      "model": ["db", "srv"],
      "credentials": { "database": "db/dev.db" }
      }
    },
    "[production]": {
      "requires": {
        "db": { "kind": "postgres" }
      }
    }
  }
}
